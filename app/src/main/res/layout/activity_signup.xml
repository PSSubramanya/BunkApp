<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Signup">

    <LinearLayout
        android:layout_width="305dp"
        android:layout_height="400dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="65dp"
        android:background="@drawable/box_borders"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="305dp"
            android:layout_height="150dp"
            android:orientation="vertical">
            <!--<ImageView-->
            <!--android:layout_width="80dp"-->
            <!--android:layout_height="80dp"-->
            <!--android:layout_marginLeft="120dp"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:src="@drawable/signup_icon"/>-->
            <TextView
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="100dp"
                android:text="Sign in"
                android:textSize="20dp"
                android:paddingLeft="25dp"
                android:textStyle="normal"/>

            <!--<TextView-->
            <!--android:layout_width="235dp"-->
            <!--android:layout_height="25dp"-->
            <!--android:layout_marginLeft="30dp"-->
            <!--android:layout_marginTop="5dp"-->
            <!--android:textStyle="normal"-->
            <!--android:textColor="#FFFFFF"-->
            <!--android:text="Don't have an account? SignUp"-->
            <!--android:paddingLeft="20dp"-->
            <!--android:id="@+id/signtext"/>-->
        </LinearLayout>

        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="18dp"
            android:text="Email"
            android:textStyle="bold"
            android:textColor="#000000"/>
        <EditText
            android:layout_width="265dp"
            android:layout_height="35dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="10dp"
            android:hint="Email Address"
            android:textSize="14dp"
            android:paddingLeft="10dp"
            android:background="@drawable/box_borders"
            android:id="@+id/emailsign"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="18dp"
            android:text="Password"
            android:textStyle="bold"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="130dp"
            android:layout_height="20dp"
            android:layout_marginTop="-20dp"
            android:layout_marginLeft="158dp"
            android:paddingLeft="10dp"
            android:textColor="@color/colorPrimaryDarkb"
            android:text="Forgot Passworf?"
            android:id="@+id/frgtpass"/>

        <EditText
            android:layout_width="265dp"
            android:layout_height="35dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="10dp"
            android:hint="Password"
            android:textSize="14dp"
            android:paddingLeft="10dp"
            android:background="@drawable/box_borders"
            android:inputType="textPassword"
            android:id="@+id/passsign"/>


        <Button
            android:layout_width="265dp"
            android:layout_height="35dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="15dp"
            android:text="SIGN IN"
            android:textColor="#FFFFFF"
            android:textSize="14dp"
            android:paddingLeft="10dp"
            android:background="@color/Green"
            android:id="@+id/signinbtn"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="185dp"
            android:text="Back"
            android:paddingTop="5dp"
            android:paddingLeft="35dp"
            android:drawableLeft="@drawable/ic_arrow_back_black_24dp"
            android:id="@+id/backpage"/>

    </LinearLayout>

</ScrollView>